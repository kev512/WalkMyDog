<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro_nav"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.walkmydog.viewpager.splashscreen.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment" />
        <action
            android:id="@+id/action_splashScreenFragment_to_loginMethod"
            app:destination="@id/loginMethod" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.walkmydog.viewpager.onboarding.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPagerFragment_to_loginMethod"
            app:destination="@id/loginMethod" />
    </fragment>
    <activity
        android:id="@+id/loginMethod"
        android:name="com.walkmydog.authentication.LoginMethod"
        android:label="activity_login_method"
        tools:layout="@layout/activity_login_method" />
</navigation>